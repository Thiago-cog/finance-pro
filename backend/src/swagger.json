{
    "openapi": "3.1.0",
    "info": {
        "title": "Api do projeto de finanças",
        "description": "Rotas para o funcionamento do app",
        "contact": {
            "email": "deoliveirasantosthiago4@gmail.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "Api Local"
        }
    ],
    "paths": {
        "/auth/login": {
            "post": {
                "summary": "Login",
                "description": "login do usuário, senha de 8 digitos.",
                "tags": ["Auth"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Login"
                            },
                            "examples": {
                                "login": {
                                    "value": {
                                        "email": "adm@gmail.com",
                                        "password": "12345678"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/LoginResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/auth/logout": {
            "delete": {
                "summary": "Logout",
                "description": "Desloga o usuário e remove o token do Redis",
                "tags": ["Auth"],
                "security": [{"bearerAuth": []}],
                "responses": {
                    "204": {
                        "description": "No Content"
                    }
                }
            }
        },
        "/users": {
            "get": {
                "summary": "Busca usuários",
                "description": "Essa rota retorna todos os usuários do banco",
                "tags": ["Users"],
                "security": [{"bearerAuth": []}],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Users"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/create": {
            "post": {
                "summary": "Cria Usuário",
                "description": "Rota para criar usuário",
                "tags": ["Users"],
                "security": [{"bearerAuth": []}],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreateUserRequest"
                            },
                            "examples": {
                                "creatrUser":{
                                    "value": {
                                        "email": "test@gmail.com",
                                        "password": "54876216",
                                        "fullname": "Usuario Teste"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Login": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            },
            "LoginResponse": {
                "type": "object",
                "properties": {
                    "user": {
                        "$ref": "#/components/schemas/UserResponse"
                    },
                    "token": {
                        "type": "string"
                    }
                }
            },
            "UserResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "email": {
                        "type": "string"
                    }
                }
            },
            "Users": {
                "type": "object",
                "properties": {
                    "users": {
                        "$ref": "#/components/schemas/UsersResponse"
                    }
                }
            },
            "UsersResponse": {
                "type": "array",
                "items": {
                    "$ref": "#/components/schemas/UsersResponseArray"          
                }
            },
            "UsersResponseArray": {
                "type": "object",
                "properties": {
                    "fullname": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    }
                }
            },
            "CreateUserRequest": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    },
                    "fullname": {
                        "type": "string"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}